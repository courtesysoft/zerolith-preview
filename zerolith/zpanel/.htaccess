# Misc settings.
ErrorDocument 404 /404.php
DirectoryIndex index.php

RewriteEngine on

# The base directory of the rewriting pattern.
RewriteBase /zerolith/zpanel/

# Except existing directories and files (very lenient rule).
RewriteCond %{REQUEST_FILENAME} !-f
#RewriteCond %{REQUEST_FILENAME} !-d

# Exception directories.
RewriteCond %{REQUEST_URI} !^/public/
RewriteCond %{REQUEST_URI} !^/zerolith/public/

# Push eligible requests to index.php
RewriteRule ^(.*)$ index.php [QSA]

# Annoy the developer with warning messages.
php_flag display_startup_errors on
php_flag display_errors on
